<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black" >

    <TextView
        android:id="@+id/hintBox1"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="22dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/text_for_4"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/hintBox2"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/hintBox1"
        android:layout_below="@+id/hintBox1"
        android:layout_marginTop="26dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/text_for_9"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/hintBox3"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/hintBox2"
        android:layout_below="@+id/navButton"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/text_for_11"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/binaryValue"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_alignTop="@+id/hintBox1"
        android:text="@string/zero"
        android:focusable="false"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/navButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/binaryValue"
        android:layout_alignTop="@+id/hintBox2"
        android:enabled="false" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="500dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/atmospheric_device_cd"
        android:src="@drawable/left_bar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="500dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/atmospheric_device_cd"
        android:src="@drawable/right_bar" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView1"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/place8Light"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/place8Switch"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:background="@drawable/toggle_switch_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/place4Light"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/place4Switch"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:background="@drawable/toggle_switch_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/place2Light"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/place2Switch"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:background="@drawable/toggle_switch_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/place1Light"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/place1Switch"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:background="@drawable/toggle_switch_background" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>